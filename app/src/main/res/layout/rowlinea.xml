<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLinea"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="1dp"
        android:layout_margin="4dp"
        card_view:cardUseCompatPadding="false">
    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icono_linea_1"
                android:id="@+id/ivLinea"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/tvLinea" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/ivLinea" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/tvIniFin" android:layout_marginLeft="136dp" android:layout_marginStart="136dp"
                app:layout_constraintStart_toEndOf="@+id/ivLinea" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="137dp" android:layout_marginRight="137dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLinea"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>